@model SecelPartner.Core.Entities.Avantage

@{
    ViewData["Title"] = "Edit Avantage";
    ViewData["STitle"] = "Avantage / Edit";
    List<SecelPartner.Core.Entities.Partenariat> list1;
    list1 = ViewBag.PartenariatList;
    var listItems1 = list1.Select(item => new SelectListItem() { Text = item.Description, Value = item.Description }).ToList();

}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartenariatId" class="control-label"></label>
                <select asp-for="PartenariatId" class="form-control" asp-items="listItems1" ></select>
                <span asp-validation-for="PartenariatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
