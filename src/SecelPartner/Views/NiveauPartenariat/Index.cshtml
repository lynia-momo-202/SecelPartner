@model IEnumerable<SecelPartner.Core.Entities.NiveauPartenariat>

@{
    ViewData["Title"] = "Niveaux de partenariat";
    ViewData["STitle"] = "Niveau / Index";
}
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a> 
                    @if (this.User.IsInRole("Super Administrateur"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
