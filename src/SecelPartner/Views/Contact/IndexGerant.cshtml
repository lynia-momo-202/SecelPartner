@model IEnumerable<SecelPartner.Core.Entities.Contact>

@{
    ViewData["Title"] = "Vos Contacts";
    ViewData["STitle"] = "Contact / Index";
}
<!-- Default box -->
<div class="card card-solid">
    <div class="card-body pb-0">
        <p>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </p>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                    <div class="card bg-light d-flex flex-fill">
                        <div class="card-header text-muted border-bottom-0">
                            @Html.DisplayFor(modelItem => item.Poste)
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead">
                                        <b>@Html.DisplayFor(modelItem => item.Nom) @Html.DisplayFor(modelItem => item.Prenom)</b>
                                    </h2>
                                    <p class="text-muted text-sm">
                                        <b>@Html.DisplayNameFor(model => model.PartenaireId): </b>@Html.DisplayFor(modelItem => item.Partenaire.Id) /  @Html.DisplayFor(modelItem => item.Partenaire.Nom)
                                    </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-paper-plane"></i></span> @Html.DisplayNameFor(modelItem => item.Email):@Html.DisplayFor(modelItem => item.Email)</li>
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> @Html.DisplayNameFor(model => model.Tel) #: @Html.DisplayFor(modelItem => item.Tel)</li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    @if (item.PhotoPath != null)
                                    {
                                        <img src="@Url.Content($"~/{item.PhotoPath}")" alt="@item.Nom @item.Prenom" class="img-circle img-fluid" />
                                    }
                                    else
                                    {
                                        <img src="~/Fichiers/avatar.png" alt="user-avatar" class="img-circle img-fluid" />
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a asp-action="MailContact" asp-route-id="@item.Id" class="btn btn-sm bg-teal">
                                    <i class="fas fa-comments"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i> View Profile
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                    <i class="fas fa-user-pen"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


