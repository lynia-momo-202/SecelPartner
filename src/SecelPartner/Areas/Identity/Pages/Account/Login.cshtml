@page
@model LoginModel

@{
    Layout = "/Views/Shared/_layoutVisitor.cshtml";
    ViewData["Title"] = "Log in";
}
<div class="container px-5">
    <div class="row gx-5 align-items-center">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-gradient-primary-to-secondary p-4">
                    <h5 class="modal-title font-alt text-white" id="feedbackModalLabel">@ViewData["Title"]-Sign in to start your session</h5>
                </div>
                <div class="modal-body border-0 p-4">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                            @*<div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fa-think fa-envelope"></span>
                                </div>
                            </div>*@
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                            @*<div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fa-solid fa-lock"></span>
                                </div>
                            </div>*@
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="form-floating mb-3">
                            <div class="col-8">
                                <div class="icheck-primary">
                                    <input class="form-check-input" asp-for="Input.RememberMe" type="checkbox" id="remember" />
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="form-floating mb-3">
                                <button id="login-submit" type="submit" class="btn btn-primary btn-block">Log in</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
        }
